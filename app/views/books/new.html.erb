<!--新規投稿機能-->
<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title, class: "form" %>

  <p>Opinion</p>
  <%= f.text_area :body, class: "form" %>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3>Errors:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>