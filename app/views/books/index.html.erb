<h1>Books(books/index.html)</h1>
<p>Title</p>
<p>Opinion</p>

<div class="user-info">
  <h1>User info(users/show.html)</h1>
  <%= image_tag @user.profile_image, size: "100x100" %>
  <div>
    <p>name</p>
    <p><%= @user.name %></p>
  </div>

  <div>
    <p>introduction</p>
    <p><%= @user.introduction %></p>
  </div>

  <div>
    <% if @user.id == current_user.id %>
      <%= link_to "edit", edit_user_path %>
    <% end %>
  </div>
</div>

<div class="new-book">
  <h1>New Book</h1>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>