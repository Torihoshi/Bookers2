<h1>(books/index.html)</h1>

  <div class="user-info">
    <h1>User info</h1>


</div>

<div class="new-book">
  <h1>New Book</h1>
  <%= form_with model: @book, method: :GET do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="book-index">
  <% @books.each do |book| %>
    <div class="user-icon">
      <p>User-icon</p>
      <span>icon</span>
    </div>

    <div class="book-title">
      <p>Title</p>
      <span><%= book.title %></span>
    </div>

      <div class="book-opinion">
      <p>Opinion</p>
    <span><%= book.body %></span>
    </div>
  <% end %>
</div>