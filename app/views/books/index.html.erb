<p>books/index</p>
<!--左部分-->
<!--ユーザー表示機能-->
<h2>User info</h2>
<%= render 'users/user', user: current_user %>

<!--新規投稿機能-->
<h2>New book</h2>
  <%= form_with model: @book, url: books_path do |f| %>
    <div class="field">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <p>Opinion</p>
      <%= f.text_area :body %>
    </div>

    <div class="field">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
  <% end %>




<!--右部分-->
<h1>本一覧</h1>

<% @books.each do |book| %>
  <div class="book">
    <h2><%= book.title %></h2>
    <p><%= book.body %></p>
    <%= link_to "詳細", book_path(book) %>
  </div>
<% end %>