<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/299c07aee8.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="nav-box">
          <a href="/", class=nav-bar-brand>
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if user_signed_in? %> <!--ログインしてる時 Home ／ Users ／ Books ／ Log out-->
                <li>
                  <%= link_to  user_path(current_user.id), class: 'nav-link text-light' do %>
                    <i class="fas fa-home" style="color: #ffffff;"></i>
                    Home
                  <% end %>
                </li>

                <li>
                  <%= link_to users_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-users" style="color: #ffffff;"></i>
                    Users
                  <% end %>
                </li>

                <li>
                  <%= link_to books_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
                    Books
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_user_session_path, method: :delete, "data-confirm" => "ログアウトしますか?", class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
                    Log out
                  <% end %>
                </li>

              <% else %> <!--ログインしてない時 Home ／ About ／ Sign Up ／ Log in-->
                <li>
                  <%= link_to root_path, class: 'nav-link text-light' do %>
                    <i class="fas fa-home" style="color: #ffffff;"></i>
                    Home
                  <% end %>
                </li>

                <li>
                  <%= link_to about_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-link" style="color: #ffffff;"></i>
                    About
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
                    Sign Up
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
                    Log in
                  <% end %>
                </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <main>
      <%= yield %>
    </main>

    <footer class="mt-5">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
