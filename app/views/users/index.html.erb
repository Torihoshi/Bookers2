

<!-- フラッシュメッセージ表示 -->
<div>
  <p class="notice"><%= flash[:notice] %></p>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">

<!--左部分-->
    <div class="col-md-3">
      <!--ユーザー情報-->
      <div class="user-info">
        <h2>User info</h2>
              <%= image_tag current_user.get_profile_image(100, 100) %>

              <table class="info-table">
                <tr>
                  <td><p>name</p></td>
                  <td><p><%= current_user.name %></p></td>
                </tr>

                <tr>
                  <td><p>introduction</p></td>
                  <td><p><%= current_user.introduction %></p></td>
                </tr>
              </table>

              <a class="edit-btn">
                <% if current_user.id == current_user.id %>
                  <%= link_to edit_user_path(current_user) do %>
                    <i class="fa-solid fa-user-gear" style="color: #696969;"></i>
                  <% end %>
                <% end %>
              </a>
      </div>

      <!--新規投稿-->
      <div class="new-book">
        <%= render 'new-book', book: @book %> <!--部分テンプレート-->
      </div>
    </div>

<!--右部分-->
    <div class="col-md-8 offset-md-1">
      <!--ユーザー一覧-->
      <div class="table">
        <h2>Users</h2>
        <table class="user-table">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>

          <% @users.each do |info| %>
            <tr>
              <td class="user-icon">
                <%= image_tag info.get_profile_image(80,80) %> <!-- ユーザーのアイコンを表示 -->
              </td>

              <td class="user-name">
                <%= info.name %> <!-- ユーザーの名前を表示 -->
              </td>

              <td class="show-link">
                <%= link_to "Show", user_path(info) %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

  </div>
</div>
<h1>(users/index.html)</h1>
