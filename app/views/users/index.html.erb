<p>users/index</p>

<!--メイン部分-->
<div class="container px-5 px-sm-0">
  <div class="row">

    <!--左部分-->
    <div class="col-md-3">
      <!--ユーザー表示機能-->
      <h2>User info</h2>
      <%= render 'user', user: current_user %>

      <!--新規投稿機能-->
      <h2>New book</h2>
      <%= render 'books/new', book: @book_new %>
    </div>

    <!--右部分-->
    <div class="col-md-8 offset-md-1">
      <!--ユーザー一覧-->
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>