  <h2>New book</h2>

  <%= form_with model: @book, url: books_path(params[:id]), method: :post do |f| %>
    <p>Title</p>
      <%= f.text_field :title, value:"", class:"form" %>
    <p>Opinion</p>
      <%= f.text_area :body, value:"", class:"form" %>
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  <% end %>